    <!-- BEGIN TEACHER REGISTRATION MODAL-->
    <div class="modal fade" id="teacherRegister" tabindex="-1" role="dialog" aria-labelledby="teacherRegisterLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="teacherRegisterLabel">New Teacher Registration</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="register">
                                <p>First Name:
                                    <input type="text" id="first_name" class="form-control" required>
                                </p>
                                <p>Last Name:
                                    <input type="text" id="last_name" class="form-control" required>
                                </p>
                                <p>Email Address:
                                    <input type="text" id="email" class="form-control" required>
                                </p>
                                <p>Username:
                                    <input type="text" id="registerUsername" class="form-control" aria-label="Username" aria-describedby="basic-addon1" required>
                                </p>
                                <p>Password:
                                    <input type="password" id="registerPassword" class="form-control" required>
                                </p>
                                <p>Authorization Code:
                                    <input type="text" id="authtoken" class="form-control" required>
                                </p>

                                <div class="modal-footer">
                                    <button id="teacherSignUpbtn" type="submit" class="btn btn-outline-light">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--END TEACHER REGISTRATION MODAL-->

    <!-- BEGIN TEACHER LOGIN MODAL-->
    <div class="modal fade" id="teacherLogin" tabindex="-1" role="dialog" aria-labelledby="teacherLoginLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="teacherLoginLabel">Teacher Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="login">
                                <p>Username:
                                    <input type="text" id="loginUsername" class="form-control" aria-label="Username" required>
                                </p>
                                <p>Password:
                                    <input type="password" id="loginPassword" class="form-control" required>
                                </p>
                                <p id="errorMessage">
                                    <span></span>
                                </p>

                                <div class="modal-footer">
                                    <button id="teacherloginbtn" type="submit" class="btn btn-light">Submit</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

