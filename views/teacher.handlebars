<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <ul class="navbar-brand" href="#">Quizzie-Moto</ul>

        <div class="nav navbar-nav navbar-right">
            <!-- Trigger registration modal -->

            <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#registerModal">
                <span class="glyphicon glyphicon-user"></span> Sign Up</button></li>
            <!-- Trigger login modal -->
            <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#loginModal">
                <span class="glyphicon glyphicon-log-in"></span>Login</button></li>  

        </div>
